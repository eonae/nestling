{
  "name": "examples.simple-http-server",
  "version": "0.1.0",
  "description": "Simple HTTP server example using @nestling/transport",
  "type": "module",
  "scripts": {
    "clear": "rm -rf dist",
    "typecheck": "run -T tsc --noEmit",
    "build": "yarn run typecheck && yarn run clear && node esbuild.config.js",
    "start": "yarn run build && node dist/bundle.js",
    "start:dev": "run -T tsx src/main.ts",
    "lint": "run -T eslint 'src/**/*.ts'",
    "lint:fix": "yarn run lint --fix"
  },
  "dependencies": {
    "@nestling/pipeline": "workspace:*",
    "@nestling/transport.http": "workspace:*",
    "zod": "^4.0.0"
  }
}
